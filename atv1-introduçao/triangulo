#include <stdio.h>
#include <math.h>
int main(){
    double a, b, c, temp1, temp2, temp3, area, perimetro;
    scanf("%lf %lf %lf", &a, &b, &c);
    temp1 = a + b;
    temp2 = a + c;
    temp3 = b + c;
    if(c < temp1 && b < temp2 && a < temp3){
        perimetro = a + b + c;
        printf("Perimetro = %.1lf\n", perimetro);
    } else {
        area = (a + b) * (c / 2);
        printf("Area = %.1lf\n", area);
    }
    return 0;
}
